<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.EndGamePage"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Text fx:id="progress"/>
            <Text fx:id="score"/>
            <Text fx:id="totalScore"/>
            <Button text="Restart" onMouseClicked="#restartGame"/>
            <Button text="Main Menu" onMouseClicked="#enterMainMenu"/>
        </VBox>
    </center>
</BorderPane>
