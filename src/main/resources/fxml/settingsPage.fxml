<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.SettingsPage"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css">
    <center>
    <VBox alignment="CENTER" spacing="10">

        <Button text="Start Game" onMouseClicked="#startGame"/>
        <Button text="Mute/Unmute" onMouseClicked="#changeMute"/>
        <Text text="Choose Game difficulty"/>
        <ChoiceBox fx:id="difficulty"/>
        <Text fx:id="message" styleClass="message"/>
    </VBox>
    </center>
    <bottom>
        <Button text="back" onMouseClicked="#enterPreviousMenu"/>
    </bottom>

</BorderPane>
