<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane fx:id="borderPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginPage">


    <center>
    <VBox alignment="CENTER" spacing="10">
        <Text text="Welcome to Cuphead" styleClass="title"/>
        <TextField promptText="Enter your username" fx:id="username"/>
        <TextField promptText="Enter your password" fx:id="password"/>
        <Button text="Register" onMouseClicked="#register"/>
        <Button text="Login" onMouseClicked="#login"/>
        <Button onMouseClicked="#loginGuest" text="Enter as a Guest" />
        <Button text="Exit" onMouseClicked="#exit"/>
        <Text fx:id="message" styleClass="message"/>
    </VBox>
    </center>


</BorderPane>
