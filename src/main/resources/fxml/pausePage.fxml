<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.PausePage"
            prefHeight="720.0" prefWidth="1280.0" stylesheets="@../css/style.css">
    <center>
        <VBox alignment="CENTER" spacing="10">
        <Button text="Resume" onMouseClicked="#resumeGame"/>
        <Button text="Mute/Unmute" onMouseClicked="#changeMute"/>
        <Button text="Restart" onMouseClicked="#restartGame"/>
        <Button text="End Game" onMouseClicked="#endGame"/>
        <Text fx:id="message" styleClass="message"/>
        </VBox>
    </center>
</BorderPane>
